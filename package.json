{
  "name": "flashdrop",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome lint .",
    "bench:get-product": "node --import tsx/esm scripts/autocannon/get-product-benchmark.mjs",
    "bench:get-sale-status": "node --import tsx/esm scripts/autocannon/get-sale-status-benchmark.mjs",
    "bench:create-order": "node --import tsx/esm scripts/autocannon/create-order-benchmark.mjs",
    "lint:fix": "biome lint . --write",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "check-types": "turbo run check-types",
    "seed": "turbo run seed --filter=api"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "autocannon": "^8.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.8.10",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
