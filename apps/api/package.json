    "@repo/schema": "workspace:*",
    "@repo/utils": "workspace:*",
    "dotenv": "^17.3.1",
    "fastify": "^5.1.0",
    "fastify-type-provider-zod": "^3.0.0",
    "ioredis": "^5.6.1",
    "mongodb": "^7.1.0",
    "object-hash": "^3.0.0",
    "prom-client": "^15.1.3",
    "zod": "^3.25.3"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/object-hash": "^3.0.6",
    "esbuild-plugin-path-alias": "^1.0.7",
    "tsc-alias": "^1.8.16",
    "tsup": "^8.5.1",
