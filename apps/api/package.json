{
  "name": "api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "check-types": "tsc --noEmit",
